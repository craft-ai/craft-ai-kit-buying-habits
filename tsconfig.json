{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "outDir": "bin",
    "rootDirs": [
      "src",
      "tests"
    ],
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true
  }
}
